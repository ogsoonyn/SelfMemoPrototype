<Window x:Class="SelfMemoPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelfMemoPrototype"
        xmlns:vm="clr-namespace:SelfMemoPrototype.ViewModel"
        mc:Ignorable="d"
        Title="SelfMemo" MinHeight="300" MinWidth="450" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <Window.Resources>
        <ContextMenu x:Key="sampleWinMenu">
            <MenuItem Header="Show" Click="MenuItem_Show_Click"/>
            <MenuItem Header="Exit" Click="MenuItem_Exit_Click"/>
        </ContextMenu>
    </Window.Resources>
    <DockPanel>
        <DockPanel.InputBindings>
            <KeyBinding Key="M" Modifiers="Ctrl" Command="{Binding OpenRegisterWindowCmd}"/>
        </DockPanel.InputBindings>

        <Menu IsMainMenu="True" DockPanel.Dock="Top">
            <MenuItem Header="File">
                <MenuItem Header="Hide"/>
                <MenuItem Header="Close"/>
            </MenuItem>
            <MenuItem Header="Edit">
                <MenuItem Header="Register" Command="{Binding OpenRegisterWindowCmd}" InputGestureText="Ctrl+M"/>
            </MenuItem>
        </Menu>
        <DockPanel DockPanel.Dock="Top" Margin="5">
                    <TextBlock DockPanel.Dock="Left" Margin="5,0" Text="Search"/>
                    <CheckBox DockPanel.Dock="Right" Content="ロック" IsChecked="{Binding LockGridEdit.Value}"/>
                    <TextBox x:Name="SearchTextBox" DockPanel.Dock="Right" Text="{Binding FilterStr.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>

        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding FilteredItems}" IsReadOnly="{Binding LockGridEdit.Value}"/>
    </DockPanel>
</Window>
