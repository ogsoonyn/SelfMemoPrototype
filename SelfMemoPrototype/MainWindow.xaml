<Window x:Class="SelfMemoPrototype.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SelfMemoPrototype"
        xmlns:b="clr-namespace:SelfMemoPrototype.Behavior"
        xmlns:vm="clr-namespace:SelfMemoPrototype.ViewModel"
        xmlns:i="http://schemas.microsoft.com/expression/2010/interactivity"
        mc:Ignorable="d"
        FocusManager.FocusedElement="{Binding ElementName=SearchTextBox}"
        Title="{Binding AppName.Value}" MinHeight="300" MinWidth="450" Height="450" Width="800">
    <Window.DataContext>
        <vm:MainViewModel/>
    </Window.DataContext>

    <i:Interaction.Behaviors>
        <b:ApplicationCommandBehavior/>
    </i:Interaction.Behaviors>

    <Window.Resources>
        <ContextMenu x:Key="sampleWinMenu">
            <MenuItem Header="Show" Click="MenuItem_Show_Click"/>
            <MenuItem Header="Exit" Click="MenuItem_Exit_Click"/>
        </ContextMenu>
    </Window.Resources>
    
    <DockPanel>
        <DockPanel.InputBindings>
            <KeyBinding Key="R" Modifiers="Ctrl" Command="{Binding OpenRegisterWindowCmd}"/>
            <KeyBinding Key="Esc" Command="Close"/>
        </DockPanel.InputBindings>

        <Menu DockPanel.Dock="Top">
            <MenuItem Header="メニュー">
                <MenuItem Header="追加登録ウィンドウを開く" Command="{Binding OpenRegisterWindowCmd}"
                          InputGestureText="Ctrl+R"/>
                <MenuItem Header="検索キーワードを登録ウィンドウにコピー"
                          ToolTip="検索フォームに入力がある状態で追加登録ウィンドウを開くと、入力内容を登録ウィンドウのキーワード部にコピーする"
                          IsCheckable="True" IsChecked="{Binding CopySearchWordToRegister.Value}"/>
                <MenuItem Header="設定" Command="{Binding OpenSettingWindowCmd}"/>
                <MenuItem Header="閉じる" Command="Close" InputGestureText="Esc"/>
            </MenuItem>
        </Menu>
        <DockPanel DockPanel.Dock="Top" Margin="5">
            <TextBlock DockPanel.Dock="Left" Margin="5,0" Text="Search"/>
            <CheckBox DockPanel.Dock="Right" Content="ロック" VerticalContentAlignment="Center"
                      IsChecked="{Binding LockGridEdit.Value}"/>
            <CheckBox DockPanel.Dock="Right" IsChecked="{Binding UseCategoryList.Value}" VerticalContentAlignment="Center">
                <ContentControl>
                    <ComboBox DockPanel.Dock="Right" ItemsSource="{Binding CategoryList}"
                              SelectedItem="{Binding CategoryListSelected.Value}" MinWidth="100"
                              IsEnabled="{Binding UseCategoryList.Value}"/>
                </ContentControl>
            </CheckBox>
            <TextBox x:Name="SearchTextBox" DockPanel.Dock="Right"
                     Text="{Binding FilterStr.Value, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"/>
        </DockPanel>

        <StatusBar DockPanel.Dock="Bottom">
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <TextBlock Text="{Binding FilteredItems.Count}"/>
                    <TextBlock Text="/"/>
                    <TextBlock Text="{Binding MemoList.Count}"/>
                </StackPanel>

            </StatusBarItem>
        </StatusBar>

        <DataGrid DockPanel.Dock="Top" ItemsSource="{Binding FilteredItems}" IsReadOnly="{Binding LockGridEdit.Value}"
                  AutoGenerateColumns="False">
            <DataGrid.Columns>
                <DataGridTextColumn Header="キーワード" Binding="{Binding KeywordR.Value}"/>
                <DataGridTextColumn Header="キーワード2" Binding="{Binding Keyword2R.Value}"/>
                <DataGridTextColumn Header="説明" Binding="{Binding DescriptionR.Value}">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="TextWrapping" Value="Wrap"/>
                            <Setter Property="AcceptsReturn" Value="True"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
                <DataGridTextColumn Header="カテゴリ" Binding="{Binding CategoryR.Value}"/>
                <DataGridTextColumn Header="更新日" Binding="{Binding DateR.Value, StringFormat=\{0:yyyy/MM/dd hh:mm:ss\}}">
                    <DataGridTextColumn.EditingElementStyle>
                        <Style TargetType="TextBox">
                            <Setter Property="IsReadOnly" Value="True"/>
                        </Style>
                    </DataGridTextColumn.EditingElementStyle>
                </DataGridTextColumn>
            </DataGrid.Columns>
        </DataGrid>
    </DockPanel>
</Window>
